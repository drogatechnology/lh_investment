<odoo>
    <data>
        <!-- Report for Request for Quotation -->
        <report
            id="action_report_rfq"
            string="Request for Quotation"
            model="local.create.rfq"
            report_type="qweb-pdf"
            name="custom_purchase_order.report_template_name"  
            file="custom_purchase_order.report_template_name"  
            print_report_name="'RFQ - %s' % (object.reference or 'N/A')" 
        />

        <!-- Report for Foreign RFQ -->
        <report
            id="action_report_template_foreign"
            model="foreign.create.rfq"
            string="RFQ Report"
            report_type="qweb-pdf"
            name="custom_purchase_order.report_template_foreign"  
            file="custom_purchase_order.report_template_foreign"  
            attachment_use="True"
        />
    </data>
</odoo>



